<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- 1. Barra superior (AppBar) que se contrae al hacer scroll -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/brand_primary_dark"
            app:title="Menú Principal">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleCentered="true" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- SECCIÓN DE INTENTS IMPLÍCITOS -->
            <TextView
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intents Implícitos"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="24dp">

                <!-- Botón Web -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnAbrirWeb"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Sitio Web"
                        app:icon="@drawable/ic_web" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Correo -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnEnviarCorreo"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Enviar Correo"
                        app:icon="@drawable/ic_email" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Compartir -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnCompartir"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Compartir"
                        app:icon="@drawable/ic_share" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnVerMapa"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Ver Mapa"
                        app:icon="@drawable/ic_map" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Llamar -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnLlamar"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Llamar"
                        app:icon="@drawable/ic_call" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Contactos-->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnContactos"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Elegir contacto"
                        app:icon="@drawable/ic_contacts" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Evento -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnAgregarEvento"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Agregar Evento"
                        app:icon="@drawable/ic_event" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Linterna -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnLinterna"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Linterna"
                        app:icon="@drawable/ic_flashlight" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Cámara -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnCamara"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Cámara"
                        app:icon="@drawable/ic_camera" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Wifi -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnWifiSettings"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Ajustes de Red"
                        app:icon="@drawable/ic_wifi" />
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- SECCIÓN DE INTENTS EXPLÍCITOS -->
            <TextView
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intents Explícitos"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Botón Perfil -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnIrPerfil"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Ir a Perfil"
                        app:icon="@drawable/ic_person" />
                </com.google.android.material.card.MaterialCardView>



                <!-- Botón Configuración -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnConfig"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Configuración"
                        app:icon="@drawable/ic_settings" />
                </com.google.android.material.card.MaterialCardView>

                <!-- En activity_home.xml, dentro del GridLayout explícito -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnAyuda"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Ayuda"
                        app:icon="@drawable/ic_help" />
                </com.google.android.material.card.MaterialCardView>

                <!-- En activity_home.xml, dentro del GridLayout explícito -->
                <com.google.android.material.card.MaterialCardView style="@style/Widget.App.Card.Menu">
                    <Button
                        android:id="@+id/btnVerDetalle"
                        style="@style/Widget.App.Button.Menu"
                        android:text="Ver Detalle"
                        app:icon="@drawable/ic_info" />
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
