<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Shadow (bottom-right) -->
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#07210A"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

    <!-- 2) Main surface with vertical gradient (dark elegant green) -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#0B3B24"
            android:centerColor="#062816"
            android:endColor="#041B13"
            android:useLevel="false" />

            <!-- ligero stroke para definiciÃ³n (opcional) -->
            <stroke
                android:width="1dp"
                android:color="#042116"/>
        </shape>
    </item>


    <item
        android:top="0dp"
        android:left="0dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#154D33"
            android:endColor="@android:color/transparent"
            android:useLevel="false" />
            <corners android:radius="18dp"/>
        </shape>
    </item>


</layer-list>
